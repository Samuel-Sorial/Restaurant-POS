<body>
    <div class="d-flex flex-column" id="content-wrapper">
    <div id="content">
        <div class="container">
            <form style="padding-top: 20px;" method="POST" action="/admin/edit-product">
                <h3>Add Product</h3>
                <div class="form-group"><label>Product name:</label><input name="productName" class="form-control" type="text"></div>
                <div class="form-group"><label>Price</label><input name="price" class="form-control" type="number" step=".1"></div>
                <div class="form-group"><label>Ratio (example: if you type 30 -&gt; 30%)</label><input name="ratio" class="form-control" type="number" min="0" max="1" step=".01"></div>
                <div class="form-group"><label>Category</label><select name="categoryId" class="form-control">
                    <optgroup label="Please select category">
                    <% if (categories.length > 0) {
                        for(let category of categories){ %>
                            <option value="<%= category.categoryId %>" selected=""><%= category.name %></option>
                            <% } } %>
                </optgroup></select></div>
                <input name="edit-type" type="hidden" value="add">
                <button class="btn btn-primary btn-block text-white btn-user" type="submit">Add Product</button>
            </form>
            <form style ="padding-top: 25px" method="POST" action="/admin/edit-product">
                <h3>Edit current product:</h3>
                <div class="form-group"><label>Product name:</label><input name="productName" class="form-control" type="text"></div>
                <div class="form-group"><label>Price</label><input name="price" class="form-control" type="number" step=".1"></div>
                <div class="form-group"><label>Ratio (example: if you type 30 -&gt; 30%)</label><input name="ratio" class="form-control" type="number" min="0" max="1" step=".01"></div>
                <div class="form-group"><label>Category</label><select name="categoryId" class="form-control">
                    <optgroup label="Please select category">
                    <% if (categories.length > 0) {
                        for(let category of categories){ %>
                            <option value="<%= category.categoryId %>" selected=""><%= category.name %></option>
                            <% } } %>
                </optgroup></select></div>
                <input name="edit-type" type="hidden" value="add">
                <button class="btn btn-primary btn-block text-white btn-user" type="submit">Add Product</button>
            </form>
        </div>
    </div>
